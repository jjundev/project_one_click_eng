<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialogTextHeader">
        <item name="android:textColor">@color/color_primary_text</item>
        <item name="android:textSize">@dimen/dialog_header_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogTextSubtitle">
        <item name="android:textColor">@color/color_sub_text</item>
        <item name="android:textSize">@dimen/dialog_subtitle_text_size</item>
    </style>

    <style name="DialogTextSectionLabel">
        <item name="android:textColor">@color/color_sub_text</item>
        <item name="android:textSize">@dimen/dialog_section_label_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogTextBody">
        <item name="android:textColor">@color/color_primary_text</item>
        <item name="android:textSize">@dimen/dialog_body_text_size</item>
    </style>

    <style name="DialogTextHelper">
        <item name="android:textColor">@color/color_sub_sub_text</item>
        <item name="android:textSize">@dimen/dialog_helper_text_size</item>
    </style>

    <style name="DialogCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/color_dialog_card_bg</item>
        <item name="cardCornerRadius">@dimen/dialog_card_corner_radius</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="DialogButtonPrimary" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">@dimen/dialog_button_height</item>
        <item name="android:background">@drawable/bg_rounded_button</item>
        <item name="android:backgroundTint">@color/color_dialog_primary_button_bg</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/dialog_button_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogButtonSecondary" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">@dimen/dialog_button_height</item>
        <item name="android:background">@drawable/bg_rounded_button</item>
        <item name="android:backgroundTint">@color/color_dialog_secondary_button_bg</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/grey_600</item>
        <item name="android:textSize">@dimen/dialog_button_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
