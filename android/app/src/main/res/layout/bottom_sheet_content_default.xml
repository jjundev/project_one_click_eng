<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="20dp">

    <!-- 영작할 문장 텍스트 -->
    <TextView
        android:id="@+id/tv_translation_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="영작할 문장:"
        android:textSize="16sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <!-- 둥근 모서리 카드 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_sentence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#F5F5F5">

        <TextView
            android:id="@+id/tv_sentence_to_translate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="안녕하세요! 치즈 피자 하나요!"
            android:textSize="16sp"
            android:textColor="#1A1A1A"
            android:lineSpacingMultiplier="1.3" />

    </com.google.android.material.card.MaterialCardView>

    <!-- 작은 설명 텍스트 -->
    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="This message is from Gemini Nano..."
        android:textSize="16sp"
        android:textColor="#2196F3"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:visibility="gone"/>

    <!-- 입력 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp">

        <!-- 채팅 입력창 -->
        <EditText
            android:id="@+id/et_user_input"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/input_field_background"
            android:hint="영어로 입력하세요..."
            android:textColorHint="#AAAAAA"
            android:textSize="14sp"
            android:textColor="#333333"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:inputType="textMultiLine"
            android:maxLines="3" />

        <!-- 마이크 버튼 -->
        <ImageButton
            android:id="@+id/btn_mic"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/mic_button_background"
            android:src="@drawable/ic_mic"
            android:contentDescription="음성 입력"
            app:tint="@android:color/white"
            android:scaleType="centerInside"
            android:padding="12dp" />

        <!-- 전송 버튼 -->
        <ImageButton
            android:id="@+id/btn_send"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/send_button_background"
            android:src="@drawable/ic_send"
            android:contentDescription="전송"
            app:tint="@android:color/white"
            android:scaleType="centerInside"
            android:padding="12dp" />

    </LinearLayout>

</LinearLayout>
