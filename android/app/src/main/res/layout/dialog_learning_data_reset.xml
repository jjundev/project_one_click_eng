<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_rounded">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/layout_input_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dialog_content_padding">

            <TextView
                android:id="@+id/tv_header"
                style="@style/DialogTextHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dialog_header_bottom_margin"
                android:text="@string/settings_learning_reset_title" />

            <TextView
                android:id="@+id/tv_subtitle"
                style="@style/DialogTextSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dialog_subtitle_bottom_margin"
                android:text="@string/settings_learning_reset_subtitle" />

            <TextView
                style="@style/DialogTextSectionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dialog_section_label_bottom_margin"
                android:text="@string/settings_learning_reset_section_title" />

            <com.google.android.material.card.MaterialCardView
                style="@style/DialogCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dialog_card_content_padding">

                    <RadioGroup
                        android:id="@+id/rg_retention_preset"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/rb_keep_1w"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/selector_dialog_radio_button_tint"
                            android:text="@string/settings_learning_reset_option_keep_1w"
                            android:textColor="@color/color_sub_text"
                            android:textSize="@dimen/dialog_subtitle_text_size" />

                        <RadioButton
                            android:id="@+id/rb_keep_2w"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/selector_dialog_radio_button_tint"
                            android:text="@string/settings_learning_reset_option_keep_2w"
                            android:textColor="@color/color_sub_text"
                            android:textSize="@dimen/dialog_subtitle_text_size" />

                        <RadioButton
                            android:id="@+id/rb_keep_1m"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/selector_dialog_radio_button_tint"
                            android:text="@string/settings_learning_reset_option_keep_1m"
                            android:textColor="@color/color_sub_text"
                            android:textSize="@dimen/dialog_subtitle_text_size" />

                        <RadioButton
                            android:id="@+id/rb_keep_3m"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/selector_dialog_radio_button_tint"
                            android:text="@string/settings_learning_reset_option_keep_3m"
                            android:textColor="@color/color_sub_text"
                            android:textSize="@dimen/dialog_subtitle_text_size" />

                        <RadioButton
                            android:id="@+id/rb_delete_all"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/selector_dialog_radio_button_tint"
                            android:text="@string/settings_learning_reset_option_all"
                            android:textColor="@color/color_sub_text"
                            android:textSize="@dimen/dialog_subtitle_text_size" />
                    </RadioGroup>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tv_reset_description"
                style="@style/DialogTextHelper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dialog_action_top_margin"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_reset_cancel"
                    style="@style/DialogButtonSecondary"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/settings_learning_reset_cancel" />

                <Space
                    android:layout_width="@dimen/dialog_action_gap"
                    android:layout_height="0dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_reset_confirm"
                    style="@style/DialogButtonPrimary"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/settings_learning_reset_confirm" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/layout_loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/dialog_loading_padding"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@color/primary_blue" />

        <TextView
            style="@style/DialogTextBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dialog_loading_text_margin_top"
            android:text="@string/settings_learning_reset_loading"
            android:textStyle="bold" />
    </LinearLayout>

</FrameLayout>
