<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_rounded">

    <ScrollView
        android:id="@+id/layout_quiz_config_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dialog_content_padding">

            <TextView
                android:id="@+id/tv_header"
                style="@style/DialogTextHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dialog_header_bottom_margin"
                android:text="@string/history_quiz_config_title" />

            <TextView
                android:id="@+id/tv_subtitle"
                style="@style/DialogTextSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dialog_subtitle_bottom_margin"
                android:text="학습 기록을 바탕으로 퀴즈를 생성해요" />

            <TextView
                style="@style/DialogTextSectionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dialog_section_label_bottom_margin"
                android:text="@string/history_quiz_config_period" />

            <com.google.android.material.card.MaterialCardView
                style="@style/DialogCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dialog_section_bottom_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dialog_card_content_padding">

                    <RadioGroup
                        android:id="@+id/rg_quiz_period"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checkedButton="@+id/rb_period_1w">

                        <RadioButton
                            android:id="@+id/rb_period_1w"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/history_quiz_period_1w"
                            android:textColor="@color/grey_700"
                            android:textSize="@dimen/dialog_subtitle_text_size" />

                        <RadioButton
                            android:id="@+id/rb_period_2w"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/history_quiz_period_2w"
                            android:textColor="@color/grey_700"
                            android:textSize="@dimen/dialog_subtitle_text_size" />

                        <RadioButton
                            android:id="@+id/rb_period_3w"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/history_quiz_period_3w"
                            android:textColor="@color/grey_700"
                            android:textSize="@dimen/dialog_subtitle_text_size" />

                        <RadioButton
                            android:id="@+id/rb_period_older"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/history_quiz_period_older"
                            android:textColor="@color/grey_700"
                            android:textSize="@dimen/dialog_subtitle_text_size" />
                    </RadioGroup>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                style="@style/DialogTextSectionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dialog_section_label_bottom_margin"
                android:text="@string/history_quiz_config_count" />

            <com.google.android.material.card.MaterialCardView
                style="@style/DialogCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dialog_card_content_padding">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/DialogTextSubtitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="몇 개의 문제를 만들어볼까요?" />

                        <TextView
                            android:id="@+id/tv_quiz_count_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5문제"
                            android:textColor="@color/primary_blue"
                            android:textSize="@dimen/dialog_section_label_text_size"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <SeekBar
                        android:id="@+id/sb_question_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="@dimen/dialog_seek_horizontal_margin"
                        android:max="9"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:progress="4"
                        android:progressBackgroundTint="@color/grey_300"
                        android:progressTint="@color/primary_blue"
                        android:splitTrack="false"
                        android:thumbTint="@color/primary_blue" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dialog_action_top_margin"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_quiz_cancel"
                    style="@style/DialogButtonSecondary"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/history_quiz_config_cancel" />

                <Space
                    android:layout_width="@dimen/dialog_action_gap"
                    android:layout_height="0dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_quiz_start"
                    style="@style/DialogButtonPrimary"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/history_quiz_config_confirm" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layout_quiz_loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dialog_loading_padding"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:indeterminateTint="@color/primary_blue" />

        <TextView
            style="@style/DialogTextBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="@string/history_quiz_config_loading"
            android:textStyle="bold" />
    </LinearLayout>

</FrameLayout>
