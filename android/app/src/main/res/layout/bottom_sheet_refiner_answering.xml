<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:paddingBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/tv_refiner_word_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="@string/refiner_word_count_default"
            android:textColor="@color/grey_700"
            android:textSize="13sp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_refiner_hint"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="@string/refiner_hint_button"
            android:textColor="@color/grey_700"
            app:cornerRadius="14dp"
            app:strokeColor="@color/grey_300"
            app:strokeWidth="1dp" />

        <TextView
            android:id="@+id/tv_refiner_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_refiner_sheet_hint"
            android:lineSpacingMultiplier="1.3"
            android:padding="12dp"
            android:textColor="@color/grey_700"
            android:textSize="13sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_refiner_answer"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/input_field_background"
                android:gravity="top|start"
                android:hint="@string/refiner_input_hint"
                android:imeOptions="actionDone"
                android:inputType="textMultiLine|textCapSentences"
                android:maxLines="3"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/grey_500"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/btn_refiner_mic"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/mic_button_background"
                android:contentDescription="@string/refiner_mic_disabled_desc"
                android:enabled="false"
                android:padding="12dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_mic"
                app:tint="@android:color/white" />

            <ImageButton
                android:id="@+id/btn_refiner_submit"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/send_button_background"
                android:contentDescription="@string/refiner_submit"
                android:padding="12dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_send"
                app:tint="@android:color/white" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
