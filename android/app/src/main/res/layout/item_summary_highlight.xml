<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardBackgroundColor="@color/color_background_2"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeColor="@color/semantic_divider"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_highlight_english"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.4"
            android:text="The English sentence you wrote."
            android:textColor="@color/color_primary_text"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_highlight_korean"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            android:lineSpacingMultiplier="1.4"
            android:text="&#xD55C;&#xAD6D;&#xC5B4; &#xD574;&#xC11D;"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_highlight_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.4"
            android:text="AI&#xAC00; &#xC774; &#xBB38;&#xC7A5;&#xC744; &#xC6D0;&#xC5B4;&#xBBFC; &#xBAA8;&#xBA3C;&#xD2B8;&#xB85C; &#xC120;&#xD0DD;&#xD55C; &#xC774;&#xC720;&#xC785;&#xB2C8;&#xB2E4;."
            android:textColor="#6F4E37"
            android:textSize="14sp" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
