<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_rounded">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dialog_content_padding">

            <TextView
                style="@style/DialogTextHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dialog_header_bottom_margin"
                android:text="프로필 설정" />

            <TextView
                style="@style/DialogTextSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dialog_subtitle_bottom_margin"
                android:text="새로운 닉네임을 입력해주세요" />

            <TextView
                style="@style/DialogTextSectionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dialog_section_label_bottom_margin"
                android:text="닉네임 입력" />

            <com.google.android.material.card.MaterialCardView
                style="@style/DialogCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dialog_card_content_padding">

                    <EditText
                        android:id="@+id/et_nickname_input"
                        style="@style/DialogTextBody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="닉네임 (최대 10자)"
                        android:inputType="textPersonName"
                        android:maxLength="10"
                        android:singleLine="true"
                        android:textColorHint="@color/color_sub_sub_text" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dialog_action_top_margin"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_nickname_cancel"
                    style="@style/DialogButtonSecondary"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="취소" />

                <Space
                    android:layout_width="@dimen/dialog_action_gap"
                    android:layout_height="0dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_nickname_save"
                    style="@style/DialogButtonPrimary"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="저장" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
