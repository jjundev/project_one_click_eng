<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_rounded">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dialog_content_padding">

            <TextView
                style="@style/DialogTextHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dialog_header_bottom_margin"
                android:text="크레딧 충전" />

            <TextView
                style="@style/DialogTextSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="학습을 위해 필요한 크레딧을 충전해보세요" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_charge_ad"
                style="@style/DialogButtonPrimary"
                android:layout_width="match_parent"
                android:text="광고보고 1크레딧 충전하기" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_charge_cancel"
                style="@style/DialogButtonSecondary"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:text="닫기" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>
