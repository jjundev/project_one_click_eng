<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_rounded">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dialog_content_padding">

            <TextView
                style="@style/DialogTextHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dialog_header_bottom_margin"
                android:text="크레딧 충전" />

            <TextView
                style="@style/DialogTextSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="학습을 위해 필요한 크레딧을 충전해보세요" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_go_to_credit_store"
                android:layout_marginBottom="24dp"
                style="@style/DialogButtonPrimary"
                android:layout_width="match_parent"
                android:text="빠르게 크레딧 충전하기" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#E0E0E0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="또는"
                    android:textSize="14sp"
                    android:textColor="@color/color_sub_text"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#E0E0E0" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_charge_ad"
                style="@style/DialogButtonPrimary"
                android:layout_width="match_parent"
                android:text="느릿느릿 광고보고 1 크레딧 충전하기" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_charge_cancel"
                style="@style/DialogButtonSecondary"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:text="닫기" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- 광고 로딩 대기용 UI -->
    <LinearLayout
        android:id="@+id/layout_loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/dialog_loading_padding"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@color/primary_blue" />

        <TextView
            style="@style/DialogTextBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dialog_loading_text_margin_top"
            android:text="광고를 준비하고 있어요..."
            android:textStyle="bold" />
    </LinearLayout>

</FrameLayout>
