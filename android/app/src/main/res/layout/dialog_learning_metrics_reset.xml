<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_rounded">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/layout_input_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dialog_content_padding">

            <TextView
                style="@style/DialogTextHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dialog_header_bottom_margin"
                android:text="@string/settings_learning_metrics_reset_title" />

            <TextView
                style="@style/DialogTextSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dialog_subtitle_bottom_margin"
                android:text="@string/settings_learning_metrics_reset_subtitle" />

            <TextView
                style="@style/DialogTextSectionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dialog_section_label_bottom_margin"
                android:text="@string/settings_learning_metrics_reset_section_title" />

            <com.google.android.material.card.MaterialCardView
                style="@style/DialogCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dialog_card_content_padding">

                    <TextView
                        style="@style/DialogTextSubtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_learning_metrics_reset_target_streak" />

                    <TextView
                        style="@style/DialogTextSubtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/settings_learning_metrics_reset_target_study_time" />

                    <TextView
                        style="@style/DialogTextSubtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/settings_learning_metrics_reset_target_xp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                style="@style/DialogTextHelper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/settings_learning_metrics_reset_warning" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dialog_action_top_margin"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_reset_cancel"
                    style="@style/DialogButtonSecondary"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/settings_learning_metrics_reset_cancel" />

                <Space
                    android:layout_width="@dimen/dialog_action_gap"
                    android:layout_height="0dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_reset_confirm"
                    style="@style/DialogButtonPrimary"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/settings_learning_metrics_reset_confirm" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/layout_loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/dialog_loading_padding"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@color/primary_blue" />

        <TextView
            style="@style/DialogTextBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dialog_loading_text_margin_top"
            android:text="@string/settings_learning_metrics_reset_loading"
            android:textStyle="bold" />
    </LinearLayout>
</FrameLayout>
