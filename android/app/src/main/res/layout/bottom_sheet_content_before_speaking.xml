<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_background_2"
    android:orientation="vertical"
    android:paddingTop="20dp">

    <!-- 영작할 문장 텍스트 -->
    <TextView
        android:id="@+id/tv_translation_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="영작할 문장:"
        android:textSize="16sp"
        android:textColor="@color/color_primary_text"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <!-- 둥근 모서리 카드 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_sentence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/color_background_3">

        <TextView
            android:id="@+id/tv_sentence_to_translate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="안녕하세요! 치즈 피자 하나요!"
            android:textSize="16sp"
            android:textColor="@color/color_primary_text"
            android:lineSpacingMultiplier="1.3" />

    </com.google.android.material.card.MaterialCardView>

    <!-- 중앙 원형 마이크 버튼 영역 -->
    <FrameLayout
        android:id="@+id/frame_mic_button"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_gravity="center_horizontal"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_marginVertical="5dp">

        <!-- 물결 애니메이션 원 1 -->
        <View
            android:id="@+id/ripple_1"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:background="@drawable/ripple_circle_gray"
            android:alpha="0"
            android:visibility="gone" />

        <!-- 물결 애니메이션 원 2 -->
        <View
            android:id="@+id/ripple_2"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:background="@drawable/ripple_circle_gray"
            android:alpha="0"
            android:visibility="gone" />

        <!-- 물결 애니메이션 원 3 -->
        <View
            android:id="@+id/ripple_3"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:background="@drawable/ripple_circle_gray"
            android:alpha="0"
            android:visibility="gone" />

        <!-- 원형 마이크 버튼 -->
        <ImageButton
            android:id="@+id/btn_mic_circle"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:background="@drawable/mic_button_ready"
            android:src="@drawable/ic_mic"
            android:scaleType="center"
            android:contentDescription="마이크 버튼"
            app:tint="@color/white" />

    </FrameLayout>

    <!-- 안내 문구 -->
    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="마이크 버튼을 누르고 답변을 시작하세요"
        android:textSize="14sp"
        android:textColor="@color/color_sub_text"
        android:layout_marginBottom="24dp" />

    <!-- 채팅 입력으로 돌아가기 텍스트 -->
    <TextView
        android:id="@+id/tv_back_to_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="채팅으로 입력하기"
        android:textSize="12sp"
        android:textColor="@color/color_sub_text" />

</LinearLayout>
