<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_rounded">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dialog_content_padding">

            <TextView
                style="@style/DialogTextHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dialog_header_bottom_margin"
                android:text="비밀번호 변경" />

            <TextView
                style="@style/DialogTextSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dialog_subtitle_bottom_margin"
                android:text="안전을 위해 현재 비밀번호를 확인할게요" />

            <TextView
                style="@style/DialogTextSectionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dialog_section_label_bottom_margin"
                android:text="현재 비밀번호" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_confirmed_password"
                style="@style/DialogCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dialog_card_content_padding">

                    <TextView
                        android:id="@+id/tv_confirmed_password"
                        style="@style/DialogTextBody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_primary_text" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_current_password"
                style="@style/DialogCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dialog_card_content_padding"
                    android:paddingEnd="@dimen/dialog_card_content_padding"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="false"
                        app:boxBackgroundMode="none"
                        app:endIconMode="password_toggle"
                        app:endIconTint="@color/color_sub_sub_text">

                        <EditText
                            android:id="@+id/et_current_password"
                            style="@style/DialogTextBody"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:hint="현재 비밀번호"
                            android:imeOptions="actionDone"
                            android:inputType="textPassword"
                            android:padding="0dp"
                            android:singleLine="true"
                            android:textColorHint="@color/color_sub_sub_text" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:id="@+id/layout_new_password_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    style="@style/DialogTextSectionLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dialog_section_label_bottom_margin"
                    android:text="새 비밀번호 입력" />

                <com.google.android.material.card.MaterialCardView
                    style="@style/DialogCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/dialog_card_content_padding"
                        android:paddingEnd="@dimen/dialog_card_content_padding"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintEnabled="false"
                            app:boxBackgroundMode="none"
                            app:endIconMode="password_toggle"
                            app:endIconTint="@color/color_sub_sub_text">

                            <EditText
                                android:id="@+id/et_new_password"
                                style="@style/DialogTextBody"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:padding="0dp"
                                android:gravity="center_vertical"
                                android:hint="새 비밀번호 (6자 이상)"
                                android:imeOptions="actionNext"
                                android:inputType="textPassword"
                                android:singleLine="true"
                                android:textColorHint="@color/color_sub_sub_text" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    style="@style/DialogCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/dialog_card_content_padding"
                        android:paddingEnd="@dimen/dialog_card_content_padding"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintEnabled="false"
                            app:boxBackgroundMode="none"
                            app:endIconMode="password_toggle"
                            app:endIconTint="@color/color_sub_sub_text">

                            <EditText
                                android:id="@+id/et_confirm_password"
                                style="@style/DialogTextBody"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:padding="0dp"
                                android:gravity="center_vertical"
                                android:hint="새 비밀번호 확인"
                                android:imeOptions="actionDone"
                                android:inputType="textPassword"
                                android:singleLine="true"
                                android:textColorHint="@color/color_sub_sub_text" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Error message textview -->
            <TextView
                android:id="@+id/tv_password_error"
                style="@style/DialogTextSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="비밀번호가 일치하지 않습니다."
                android:textColor="@android:color/holo_red_dark"
                android:textSize="12sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dialog_action_top_margin"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_change_password_cancel"
                    style="@style/DialogButtonSecondary"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="취소" />

                <Space
                    android:layout_width="@dimen/dialog_action_gap"
                    android:layout_height="0dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_change_password_save"
                    style="@style/DialogButtonPrimary"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="확인" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
