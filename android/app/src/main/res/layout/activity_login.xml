<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".activity.LoginActivity">

    <!-- Background VideoView (Placeholder for now) -->
    <VideoView
        android:id="@+id/videoViewBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <!-- We can add a semi-transparent overlay just in case the video is too bright -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33000000" />

    <!-- Bottom Sheet Container -->
    <LinearLayout
        android:id="@+id/bottomSheetLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom_sheet_login"
        android:orientation="vertical"
        android:padding="24dp"
        app:behavior_hideable="false"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <!-- Handle icon at the top of the bottom sheet -->
        <View
            android:layout_width="48dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_bottom_sheet_handle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEmailLogin"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp"
            android:text="이메일로 로그인"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:backgroundTint="#4CAF50" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGoogleLogin"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="구글 계정으로 로그인"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:backgroundTint="#4285F4" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
