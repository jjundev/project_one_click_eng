<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:gravity="end">

    <!-- 스피커 아이콘 (TTS) -->
    <ImageView
        android:id="@+id/btn_speaker"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_gravity="bottom"
        app:tint="@color/color_sub_text"
        android:src="@drawable/ic_speaker"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="음성 재생"
        android:clickable="true"
        android:focusable="true" />

    <!-- 말풍선 (우측 정렬, Toss Blue 배경) -->
    <LinearLayout
        android:id="@+id/bubble_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_bubble_user"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <!-- 사용자 메시지 (흰색 텍스트) -->
        <TextView
            android:id="@+id/tv_message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I'd like to order a steak, please."
            android:textColor="@color/color_text_on_fixed_bg"
            android:textSize="15sp"
            android:lineSpacingMultiplier="1.3" />

    </LinearLayout>

</LinearLayout>
