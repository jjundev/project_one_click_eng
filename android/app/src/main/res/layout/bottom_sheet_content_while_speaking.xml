<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="20dp">

    <!-- 영작할 문장 라벨 -->
    <TextView
        android:id="@+id/tv_translation_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="영작할 문장:"
        android:textSize="16sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <!-- 영작할 문장 카드 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_original_sentence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#F5F5F5">

        <TextView
            android:id="@+id/tv_original_sentence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="안녕하세요! 치즈 피자 하나요!"
            android:textSize="16sp"
            android:textColor="#1A1A1A"
            android:lineSpacingMultiplier="1.3" />

    </com.google.android.material.card.MaterialCardView>

    <!-- 중앙 원형 마이크 버튼 영역 (프로그레스 링 포함) -->
    <FrameLayout
        android:id="@+id/frame_mic_button"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_gravity="center_horizontal"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_marginVertical="5dp">

        <!-- Loudness Waveform 영역 -->
        <com.jjundev.oneclickeng.view.WaveformView
            android:id="@+id/waveform_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@android:color/transparent" />

        <!-- 물결 애니메이션 원 1 -->
        <View
            android:id="@+id/ripple_1"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:background="@drawable/ripple_circle"
            android:alpha="0"
            android:visibility="gone" />

        <!-- 물결 애니메이션 원 2 -->
        <View
            android:id="@+id/ripple_2"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:background="@drawable/ripple_circle"
            android:alpha="0"
            android:visibility="gone" />

        <!-- 물결 애니메이션 원 3 -->
        <View
            android:id="@+id/ripple_3"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:background="@drawable/ripple_circle"
            android:alpha="0"
            android:visibility="gone" />



        <!-- 프로그레스 링 (녹음 중 표시) -->
        <ProgressBar
            android:id="@+id/progress_ring"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/progress_ring"
            android:visibility="gone" />

        <!-- 원형 마이크/녹음 완료 버튼 -->
        <ImageButton
            android:id="@+id/btn_mic_circle"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:background="@drawable/mic_button_recording"
            android:src="@drawable/ic_mic"
            android:scaleType="center"
            android:contentDescription="녹음 완료 버튼"
            app:tint="@android:color/white" />

        <!-- 로딩 스피너 (분석 중 표시) -->
        <ProgressBar
            android:id="@+id/loading_spinner"
            style="?android:attr/progressBarStyle"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/loading_spinner_dots"
            android:visibility="gone" />

    </FrameLayout>

    <!-- 안내 텍스트 -->
    <TextView
        android:id="@+id/tv_listening_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="답변이 끝나면 마이크 버튼을 다시 누르세요"
        android:textSize="14sp"
        android:textColor="#E91E63"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <!-- 채팅 입력으로 돌아가기 텍스트 -->
    <TextView
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="처음부터 말하기"
        android:textSize="12sp"
        android:textColor="#888888" />

</LinearLayout>
